set window-title-basename "true"
set selection-clipboard "clipboard"

# One dark theme for Zathura
# Swaps Foreground for Background to get a light version if the user prefers

#
# Onedark color theme
#

set notification-error-bg       "#ff5555" # Red
set notification-error-fg       "#ffffe6" # Foreground
set notification-warning-bg     "#ffb86c" # Orange
set notification-warning-fg     "#44475a" # Selection
set notification-bg             "#1E222A" # Background
set notification-fg             "#ffffe6" # Foreground

set completion-bg               "#1E222A" # Background
set completion-fg               "#6272a4" # Comment
set completion-group-bg         "#1E222A" # Background
set completion-group-fg         "#6272a4" # Comment
set completion-highlight-bg     "#44475a" # Selection
set completion-highlight-fg     "#ffffe6" # Foreground

set index-bg                    "#1E222A" # Background
set index-fg                    "#ffffe6" # Foreground
set index-active-bg             "#44475a" # Current Line
set index-active-fg             "#ffffe6" # Foreground

set inputbar-bg                 "#1E222A" # Background
set inputbar-fg                 "#ffffe6" # Foreground
set statusbar-bg                "#1E222A" # Background
set statusbar-fg                "#ffffe6" # Foreground

set highlight-color             "#ffb86c" # Orange
set highlight-active-color      "#ff79c6" # Pink

set default-bg                  "#1E222A" # Background
set default-fg                  "#ffffe6" # Foreground

set render-loading              true
set render-loading-fg           "#1E222A" # Background
set render-loading-bg           "#ffffe6" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#1E222A" # Background
set recolor-darkcolor           "#ffffe6" # Foreground

#
# Startup options
#
set adjust-open width
set recolor true
